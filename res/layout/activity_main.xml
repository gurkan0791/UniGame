<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oyunresim"
    android:src="@drawable/oyunresim"
	android:scaleType = "centerCrop"
    tools:context="com.example.unigame.MainActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="#fff"
        android:text="PONG GAME"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="37dip" />
    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#fff"
        android:text="OYNA"
        android:textColor="@color/abc_search_url_text_holo" />

</RelativeLayout>
